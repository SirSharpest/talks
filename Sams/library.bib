issn = {1664-462X},
journal = {Frontiers in Plant Science},
keywords = {three-dimensional image analysis, geometric morpho},
number = {September},
title = {{Quantifying floral shape variation in 3D using microcomputed tomography: a case study of a hybrid line between actinomorphic and zygomorphic flowers}},
url = {http://journal.frontiersin.org/Article/10.3389/fpls.2015.00724/abstract},
volume = {6},
year = {2015}
}
