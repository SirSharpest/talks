file = {:home/nathan/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Naik et al. - 2017 - A real-time phenotyping framework using machine learning for plant stress severity rating in soybean.pdf:pdf},
isbn = {0018-9448},
issn = {17464811},
journal = {Plant Methods},
keywords = {High-throughput phenotyping,Image analysis,Machine learning,Plant stress,Smartphone},
number = {1},
pages = {1--12},
pmid = {28405214},
publisher = {BioMed Central},
title = {{A real-time phenotyping framework using machine learning for plant stress severity rating in soybean}},
volume = {13},
year = {2017}
}
