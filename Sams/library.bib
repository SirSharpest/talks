file = {:home/nathan/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Staedler, Masson, Sch{\"{o}}nenberger - 2013 - Plant Tissues in 3D via X-Ray Tomography Simple Contrasting Methods Allow High Resolution Imag.pdf:pdf},
isbn = {1932-6203},
